<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorAccent">@color/colorSenary</item>
        <item name="colorSecondary">@color/colorSenary</item>
        <item name="colorPrimaryDark">@color/colorSenary</item>
        <item name="colorSecondaryVariant">@color/colorSenary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorSenary</item>

    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_modal_bottom_sheet</item>
    </style>

    <style name="titleText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="lineHeight">24dp</item>
        <item name="android:letterSpacing">0.038</item>
    </style>

    <style name="body1">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="lineHeight">20dp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="body2">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="lineHeight">20dp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Caption1">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">14dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Subtitle1">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="Subtitle2">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">18dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="AppSwitch" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/colorSenary</item>
    </style>

    <style name="Button.Senary" parent="@style/Widget.AppCompat.Button">
        <item name="backgroundTint">@color/color_states_buttons</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/body2</item>
    </style>

    <style name="Button.WhiteButton" parent="@style/Widget.AppCompat.Button">
        <item name="backgroundTint">@color/colorTertiary</item>
        <item name="android:textColor">@color/colorSenary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/body2</item>
    </style>


    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox</item>
    </style>
    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="android:textAppearance">@style/body1</item>
        <item name="colorOnSurface">@color/colorSenary</item>
        <item name="colorSecondary">@color/colorSenary</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="colorPrimaryDark">@color/colorSenary</item>
        <item name="colorAccent">@color/colorSenary</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

</resources>